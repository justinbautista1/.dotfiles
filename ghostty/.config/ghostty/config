# -- UI --

theme = GitHub-Dark-Default
font-family = Monaspace Neon
font-size = 16
font-feature = -liga, -calt, -dlig
cursor-style = block
cursor-style-blink = true
shell-integration-features = no-cursor
background-opacity = 0.9
background-blur = 10
window-position-x = 0
window-position-y = 0
window-padding-x = 10
window-padding-y = 5
window-width = 9999
window-height = 25
macos-titlebar-style = tabs
confirm-close-surface = false
macos-option-as-alt = true


# -- Keybinds --

## Global Keybinds
keybind = global:alt+space=toggle_visibility

## Pane Management
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up
keybind = alt+l=goto_split:right
keybind = alt+z=toggle_split_zoom
keybind = alt+w=close_surface
keybind = alt+shift+l=new_split:right
keybind = alt+shift+j=new_split:down

