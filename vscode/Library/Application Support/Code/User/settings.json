{
  // Core
  "workbench.colorTheme": "Material Theme Ocean High Contrast",
  "workbench.iconTheme": "symbols",
  "symbols.hidesExplorerArrows": true,
  "material-icon-theme.hidesExplorerArrows": true,
  "editor.fontFamily": "'Monaspace Neon', monospace",
  "editor.inlineSuggest.fontFamily": "'Monaspace Xenon', monospace",
  "editor.fontLigatures": "'calt', 'ss01', 'ss03', 'ss07', 'ss09', 'liga', 'cv01' 2",
  "editor.fontSize": 14,
  "editor.tabSize": 4,
  "editor.lineNumbers": "relative",
  "workbench.startupEditor": "none",
  "window.newWindowProfile": "Default",
  "workbench.editor.showTabs": "single",
  "files.autoSave": "afterDelay",

  // Sidebar & Layout
  "explorer.compactFolders": false,
  "workbench.tree.indent": 12,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "top",

  // Editor Behavior
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorSurroundingLines": 1000,
  "editor.cursorSurroundingLinesStyle": "all",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.lightbulb.enabled": "off",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": "on"
  },

  // Bracket & Guides
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",

  // Minimap
  "editor.minimap.enabled": false,
  "editor.minimap.autohide": true,
  "editor.minimap.renderCharacters": false,

  // Terminal
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.inheritEnv": false,
  "workbench.panel.showLabels": false,

  // Language-Specific Settings
  "[javascript][javascriptreact][typescript][typescriptreact][yaml][css][scss][html][json][jsonc][jsonl][markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.organizeImports.ruff": "explicit",
      "source.fixAll.ruff": "explicit"
    }
  },
  "python.analysis.autoImportCompletions": true,
  "python.terminal.activateEnvironment": true,

  // Files
  "files.associations": {
    "*.scss": "postcss",
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/__pycache__": true
  },
  "explorer.confirmDragAndDrop": false,

  // Breadcrumbs
  "breadcrumbs.showArrays": false,
  "breadcrumbs.showBooleans": false,
  "breadcrumbs.showClasses": false,
  "breadcrumbs.showConstants": false,
  "breadcrumbs.showConstructors": false,
  "breadcrumbs.showEnumMembers": false,
  "breadcrumbs.showEnums": false,
  "breadcrumbs.showEvents": false,
  "breadcrumbs.showFields": false,
  "breadcrumbs.showFunctions": false,
  "breadcrumbs.showInterfaces": false,
  "breadcrumbs.showKeys": false,
  "breadcrumbs.showMethods": false,
  "breadcrumbs.showModules": false,
  "breadcrumbs.showNamespaces": false,
  "breadcrumbs.showNull": false,
  "breadcrumbs.showNumbers": false,
  "breadcrumbs.showObjects": false,
  "breadcrumbs.showOperators": false,
  "breadcrumbs.showPackages": false,
  "breadcrumbs.showProperties": false,
  "breadcrumbs.showStrings": false,
  "breadcrumbs.showStructs": false,
  "breadcrumbs.showTypeParameters": false,
  "breadcrumbs.showVariables": false,

  // Git
  "git.timeline.showAuthor": false,
  "git.confirmSync": false,
  "git.autofetch": true,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,

  // Jupyter & Notebook
  "notebook.output.scrolling": true,
  "notebook.output.wordWrap": true,
  "notebook.breadcrumbs.showCodeCells": false,
  "jupyter.askForKernelRestart": false,

	// Chat
	"chat.agent.enabled": true,
	"github.copilot.enable": {
		"*": true
	},

	// Vim
	"vim.useSystemClipboard": true,
  "vim.smartRelativeLine": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 250,
  "vim.timeout": 100000,
  "vim.leader": "<space>",
	"vim.handleKeys": {
		"<C-d>": true,
		"<C-k>": false,
		"<C-c>": false,
		"<C-u>": true,
		"<C-v>": false,
		"<C-x>": false,
		"<C-a>": false,
		"<C-f>": false,
		"<C-h>": false,
		"<C-w>": false,
		"<C-s>": false,
		"<C-p>": false,
		"<C-b>": false,
		"<space>": true
	},
	"vim.normalModeKeyBindingsNonRecursive": [
		// Vim bindings
		{
			// Switch between recent tabs (like alt-tab)
			"before": ["<tab>"],
			"after": ["<C-6>"]
		},

    // Vscode bingings
    // Layout & buffer management
    {
      // Wipe (close) sidebar
      "before": ["<leader>", "w", "s"],
      "commands": ["workbench.action.closeSidebar"]
    },
    {
      // Wipe secondary bar
      "before": ["<leader>", "w", "a"],
      "commands": ["workbench.action.closeAuxiliaryBar"]
    },
    {
      // Wipe panel
      "before": ["<leader>", "w", "p"],
      "commands": ["workbench.action.closePanel"]
    },

    // Search and files
    {
      // Search open editors
      "before": ["<leader>", ","],
      "commands": ["workbench.action.showAllEditors"]
    },
    {
      // Search files in workspace
      "before": ["<leader>", "<leader>"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      // Search text in workspace files
      "before": ["<leader>", "<S-f>"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      // Search text in current file
      "before": ["<leader>", "f"],
      "commands": ["actions.find"]
    },
    {
      // Open explorer
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      // Go to references
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },

    // Git
    {
      // Open source control (git)
      "before": ["<leader>", "g"],
      "commands": ["workbench.view.scm"]
    },

    // Commands and settings
    {
      // Open command palette
      "before": ["<leader>", "c", "p"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      // Reload window
      "before": ["<leader>", "c", "r"],
      "commands": ["workbench.action.reloadWindow"]
    },

    // Editing
    {
      // Comment
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"]
    },

    // AI assistance
    {
      // Open chat
      "before": ["<leader>", "i", "a"],
      "commands": ["workbench.action.chat.open"]
    },
    {
      // Open inline chat
      "before": ["<leader>", "i", "l"],
      "commands": ["inlineChat.start"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    // Vim bindings
    {
      // Paste replace
      "before": ["<leader>", "p"],
      "after": ["\"", "_", "d", "P"]
    },
    {
      // Delete
      "before": ["<leader>", "d"],
      "after": ["\"", "_", "d"]
    },

    // Vscode bindings
    {
      // Comment
      "before": ["<leader>", "/"],
      "commands": ["editor.action.commentLine"]
    },
    {
      // Search text in workspace files
      "before": ["<leader>", "<S-f>"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      // Search text in current file
      "before": ["<leader>", "f"],
      "commands": ["actions.find"]
    }
  ],

	// Prettier
	"prettier.tabWidth": 4,
	"prettier.useTabs": true,
	"prettier.requireConfig": false,

	// Ruff
	"ruff.lineLength": 120,
	"ruff.lint.extendSelect": [],
	"ruff.lint.ignore": [
		"T201",
		"D",
		"FA100",
		"PLR0913",
		"E402",
		"FA102",
		"COM812",
		"RET504",
		"ERA001",
		"S113",
		"F841",
		"PLR2004",
		"PTH123",
		"E501",
		"BLE001",
		"TRY300",
		"TRY003",
		"EM101",
		"ANN401",
		"SIM300",
		"TD",
		"FIX002",
		"RUF012",
		"EM102"
	],
	"ruff.lint.select": ["ALL"],
	"ruff.nativeServer": true,

// Extensions & Plugins
  "prettier.requireConfig": false,
  "evenBetterToml.formatter.allowedBlankLines": 1,
  "postman.settings.dotenv-detection-notification-visibility": false,
  "supermaven.otherWarning": false,
  "autoDocstring.startOnNewLine": true
}

